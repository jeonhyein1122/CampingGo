<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Shopping_DetailActivity">


    <ToggleButton
        android:id="@+id/tb_favor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_favor_select"
        android:textOn="  "
        android:textOff=" "/>


    <ImageView
        android:id="@+id/shopping_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/noimage" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shopping_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profilenull"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/shopping_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hihi"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/shopping_profile"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffdddddd"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"/>


    <TextView
        android:id="@+id/shopping_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/shopping_detail_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="26sp"
        android:gravity="right"
        android:textColor="#ffff3333"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/shopping_detail_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="detail"
        android:textSize="20sp"
        android:textColor="#ff333333"
        android:layout_marginLeft="8dp"/>




</LinearLayout>