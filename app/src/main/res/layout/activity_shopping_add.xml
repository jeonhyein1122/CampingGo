<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.andro
    id.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Shopping_add_Activity">

   <ImageView
       android:id="@+id/shopping_add_iv"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:src="@drawable/test"
       android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/shopping_add_ettitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="title 입력"
        android:layout_below="@+id/shopping_add_iv"
        android:maxEms="16"
        android:textSize="16sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/shopping_add_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="가격"
        android:layout_below="@+id/shopping_add_ettitle"
        android:maxEms="9"
        android:textSize="16sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/shopping_add_etdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shopping_add_value"
        android:hint="내용을 입력해주세요."/>




</RelativeLayout>