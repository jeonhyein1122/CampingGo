<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_tab_first_bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <EditText
                    android:id="@+id/searchet"
                    android:layout_width="280dp"
                    android:layout_height="60dp"
                    android:background="@drawable/tab1_tv_bg"
                    android:hint="우리 어디갈까?"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_gravity="center"
                    android:paddingTop="100dp"
                    android:layout_margin="16dp"
                    android:drawableLeft="@drawable/search"
                    android:inputType="text"
                    android:drawablePadding="8dp"/>

                <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    />


            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_weight="1"
                    android:paddingBottom="16dp">

                  <androidx.appcompat.widget.AppCompatButton
                      android:id="@+id/btnall"
                      android:layout_width="80dp"
                      android:layout_height="80dp"
                      android:layout_marginLeft="48dp"
                      android:text="전체"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:background="@drawable/campingicon"
                      android:layout_alignParentBottom="true" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btncamping"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="24dp"
                        android:text="야영장"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/campingjangicon"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/btnall"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnglam"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="24dp"
                        android:text="글램핑"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/glampingicon"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/btncamping"/>

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnmountain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="48dp"
                android:text="산"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/mountainicon"
                android:layout_alignParentBottom="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btncaraban"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:text="카라반"
                android:background="@drawable/trailericon"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btnmountain"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnsea"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="24dp"
                    android:text="바다"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/seaicon"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/btncaraban"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인기많은 글"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천 캠핑장"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>