    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/login_etemail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="sample@email.com"
        android:textSize="16sp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/login_etpassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="password"
        android:textSize="16sp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="25sp"
        android:background="@drawable/bg_edit"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="8dp"/>


    <ImageButton
        android:id="@+id/imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_narrow"
        android:background="@android:color/transparent"
        android:onClick="clicklogin"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imgbtn"
        android:layout_marginTop="50dp">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/signup"
            android:layout_toLeftOf="@+id/signup"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/black"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 하시겠습니까?"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="25sp"
        android:background="@drawable/bg_edit"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="15dp"
        android:padding="8dp"/>







</LinearLayout>