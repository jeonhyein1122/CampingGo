<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mypage_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profilenull"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mypage_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" test "
        android:textSize="20sp"
        android:layout_below="@+id/mypage_profile"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/mypage_profile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_edit"
        android:layout_below="@+id/mypage_nickname"
        android:padding="8dp" />


</RelativeLayout>

    <Button
        android:id="@+id/favorlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찜한목록"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환경설정"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131"
        android:onClick="clicksetting"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객센터"
        android:backgroundTint="#D3D3D3"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="#323131"
        android:onClick="clickcenter"/>



</LinearLayout>